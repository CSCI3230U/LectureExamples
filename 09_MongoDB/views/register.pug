extends toplevel
block content
   h1= title

   div(class='errorMessage')= errorMessage

   form(action='/processRegistration',
      method='post',
      class='form')

      label(class='label row1', for='username') Username:
      input(type='text',
            id='username',
            name='username',
            placeholder='Username'
            class='control row1')

      label(class='label row2', for='pwd') Password:
      input(type='password',
            id='pwd',
            name='pwd',
            placeholder='Password'
            class='control row2')

      button(type='submit',
             class='control row3') Sign Up
